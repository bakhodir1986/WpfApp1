<Window x:Class="WpfApp1.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PopUpWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="287*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="TourId" Margin="10"></TextBlock>
        <TextBlock Grid.Row="1" Name="JointGroups" Margin="10"></TextBlock>
        <TextBlock Grid.Row="2" Name="FromStartTillEndDateWithDash" Margin="10"></TextBlock>
        <DataGrid Grid.Row="3" x:Name="DetailDg"></DataGrid>
    </Grid>
</Window>
